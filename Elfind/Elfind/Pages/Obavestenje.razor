@if (notClicked)
{
    <h4>Novo obavestenje</h4>
}
else
{
    <h4>Obavestenje</h4> 
}
<div class="obavestenje">
    @if (!showQuestionText)
    {
        <div class="tekstObavestenja">
            <label for="text-input">Unesite obavestenje:</label>
            <input type="text" id="text-input" @bind="@text" />
            <button @onclick="SetText">Ok</button>
        </div>
    }
    else
    {
        <div class="tekstObavestenja">
            <p>@text</p>
        </div>
    }

    <div>
        @if (notClicked)
        {
            <button @onclick="ShowQuestionText">Done</button>
        }
    </div>
</div>

@code {
    private string text;
    private bool showQuestionText = false;
    private bool notClicked = true;

    private void ShowQuestionText()
    {
        showQuestionText = true;
        notClicked = false;
    }

    private void SetText()
    {
        showQuestionText = false;
    }
}
